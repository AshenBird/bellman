{
  "compilerOptions": {
    "declarationDir": "types",
    "rootDir": "src",
    "emitDeclarationOnly": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    
    "target": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "composite": true
  },
  "exclude": ["scripts","types"]
}
